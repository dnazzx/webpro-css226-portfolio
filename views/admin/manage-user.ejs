<%- include("../partials/userheader") %>
<head>
    <link rel="stylesheet" href="/stylesheets/admin.css">
</head>
        <div class="content">
            <div class="manage-heading">
                <div class="singleform">

                        <h1>MANAGE USER</h1>
                        <div class="search-form">
                          <form action="/admin/search" method="get">
                            <input type="text" placeholder="Search.." name="search">
                            <button type="submit"> SEARCH </button>
                          </form>
                            <br><br><br>
                        </div>

                      <table>
                        <colgroup>
                          <col style="width: 0%;">
                          <col style="width: 80px;">
                          <col style="width: 100px;">
                          <col style="width: 50px;">
                          <col style="width: 50px;">
                          <col style="width: 50px;">
                        </colgroup>

                        <tr>
                            <th class="col1" style="text-align: center;"></th>
                            <th class="col2">USERNAME</th>
                            <th class="col3">EMAIL</th>
                            <th class="col4">STATUS</th>
                            <th style="text-align: center;">VIEW</th>
                            <th style="text-align: center;">PROJECT</th>
                        </tr> 
                      <% if(users.length > 0) { %>  
                        <% users.reverse().forEach(function(user) { %>
                            <tr>
                                <td style="width: 0px; "></td>
                                <td style="width: 0px; "><%= user.username %></td>
                                <td style="width: 0px;"><%= user.email %></td>
                                <td style="width: 0px;"><%= user.status.charAt(0).toUpperCase()+ user.status.slice(1) %></td>
                                <td style="width: 0px; text-align: center;">
                                    <a href="/admin/view/<%= user._id %>" class="btn-admin"><i class="fas fa-eye"></i></a>
                                </td>
                                <td style="width: 0px; text-align: center;">
                                  <a href="/admin/show/<%= user._id %>" class="btn-admin"><i class="fas fa-file"></i></a>
                                </td>
                            </tr>

                        <% }) %>
                        <% } else { %>
                            <h1><center>Not Found</center></h1>
                        <% } %>
                    </table> 
                    
                    
                </div>
            </div>
        </div>

        <%- include("../partials/copyright") %>
<%- include("../partials/indexfooter") %>