<%- include("../partials/userheader") %>

        <div class="content">
            <div class="project row">

                <div class="col-12 col-md-4">
                    <div class="single-blog">
                            <div id="btn-plus">
                                <button type="button" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">
                                    <i class="fas fa-plus-circle"></i>
                                </button>
                            </div>
                            <form action="/portfolio/newproject" method="POST">    
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
    
                                            <div class="modal-header">
                                              <h5 class="modal-title" id="exampleModalLabel">New Project : Name Project</h5>
                                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                              </button>
                                            </div>
    
                                            <div class="modal-body">
                                              <form>
                                                <div class="form-group">
                                                  <input type="text" class="form-control" id="nameproject" name="nameproject" style="font-size: 14px;" required autofocus>
                                                </div>
                                              </form>
                                            </div>
                                            
                                            <div class="modal-footer">
                                              <button type="button" class="btn btn-secondary" data-dismiss="modal" style="color: #16162d;">Close</button>
                                              <button type="submit" class="btn btn-primary" style="color: #16162d;">Create</button>
                                            </div>
    
                                        </div>
                                    </div>
                                </div>
                            </form>
                    </div>
                </div>
                <% for(let i=0 ; i < resume.length; i++){ %>
                    <% var userid1 = currentUser._id.toString(); var userid2 = resume[i].userid.toString(); %>
                    <% if( userid1 === userid2 ){%>
                    <div class="col-12 col-md-4">
                        <div class="single-blog">
                            <div class="projectfield">
                                <img src="http://www.baltana.com/files/wallpapers-20/Pixel-Art-Background-Wallpapers-49560.jpg" alt="Avatar" style="width:80%">
                                <p><%= resume[i].nameproject %></p>
                                <p style="font-size: 12px; color: lightslategray;">Create at : <%= resume[i].created.toLocaleDateString('en-TH') %></p>
                                <a href="/project/<%= resume[i]._id %>" class="btn">Open</a> 
                                <a href="/project/form-field/<%= resume[i]._id %>" class="btn">Edit</a>
                                <a class="btn" href="/project/deleteproject/<%= resume[i]._id %>">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }} %>
                <!--
                    -->
            </div>
        </div>

        <%- include("../partials/copyright") %>
<%- include("../partials/indexfooter") %>
